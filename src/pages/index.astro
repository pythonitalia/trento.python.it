import "../base.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/img/logo-python-italia.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>PyTrento</title>
    <meta
      name="description"
      content="La community di Python Italia a Trento ⛰️ "
    />
    <link rel="stylesheet" href="https://use.typekit.net/xhe6ncb.css" />
  </head>
  <body class="bg-primary min-h-screen">
    <div class="container mx-auto">
      <img
        src="/img/logo-python-italia.svg"
        class="mx-auto w-20 lg:w-52 mt-12"
        alt=""
      />
      <h1
        class="text-secondary font-extrabold text-3xl lg:text-8xl text-center leading-none"
      >
        PyTrento
      </h1>

      <p class="text-center text-white mt-12 text-lg lg:text-xl">
        La community di Python Italia a Trento ⛰️
      </p>

      <ul class="px-4 max-w-md lg:max-w-lg mx-auto py-12">
        <li>
          <a
            href="https://www.meetup.com/pytrento"
            target="_blank"
            class="link-element">📅 Gli eventi</a
          >
        </li>
        <li>
          <a
            href="https://t.me/+X1_1-Tf8E01kMGU8"
            target="_blank"
            class="link-element">💬 Gruppo su Telegram</a
          >
        </li>
        <li>
          <a
            href="https://twitter.com/PyTrento"
            target="_blank"
            class="link-element">🐦 Twitter</a
          >
        </li>
        <li>
          <a
            href="https://github.com/pythonitalia/trento.python.it"
            target="_blank"
            class="link-element">🐙 GitHub</a
          >
        </li>
        <li>
          <a href="https://www.python.it/" target="_blank" class="link-element"
            >🇮🇹 Python Italia</a
          >
        </li>
        <li>
          <a href="https://pycon.it" target="_blank" class="link-element"
            >🎪 Pycon Italia</a
          >
        </li>
      </ul>
    </div>
  </body>
</html>
